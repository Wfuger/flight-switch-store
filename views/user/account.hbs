<div id='useraccountpage'>

  <h1>Account Details</h1>
  <a href="/users/{{details.id}}/edit"><h3>Edit Account Details</h3></a>

  <table>
    <tbody>
      {{#details}}
      <tr><td><h3>Email</h3></td><td>{{email}}</td></tr>
      <tr><td><h3>First Name</h3></td><td>{{fname}}</td></tr>
      <tr><td><h3>Last Name</h3></td><td>{{lname}}</td></tr>
      {{/details}}
    </tbody>
  </table>

  <h1>Order History</h1>

  {{#unless orders}}
  You have no previous orders.
  {{/unless}}

  {{#ordertotal}}

  <table>
    <tbody>
      <h3>Total: ${{total}}</h3>
      <h3>Items:</h3>

      {{#orderItems}}
      <tr><td>{{$price}} {{quantity}} {{shirt.designs.name}} {{shirt.colors.color}} {{shirt.sizes.size}}</td></tr>
      {{/orderItems}}

      <tr><td><h3>Shipping Address</h3></td></tr>
      <tr><td>{{address}}</td></tr>
      <tr><td>{{city}}</td></tr>
      <tr><td>{{state}}</td></tr>
      <tr><td>{{zip}}</td></tr>
      <tr><td><h3>Order Status</h3></td></tr>
      <tr>
        <td>
          {{#equal order_status_id 1}} Processing {{/equal}}
          {{#equal order_status_id 2}} Shipped {{/equal}}
          {{#equal order_status_id 3}} Refunded {{/equal}}
        </td>
      </tr>
    </tbody>
  </table>

  {{/ordertotal}}

</div>
