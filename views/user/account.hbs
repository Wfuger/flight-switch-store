<div id='useraccountpage'>
  <h1>Account Details</h1>
  <a href="/users/{{details.id}}/edit"><h3>Edit Account Details</h3></a>

  <table>
    <tbody>
      {{#details}}
      <tr>
        <td><h3>Email</h3></td>
        <td>{{email}}</td>
      </tr>
      <tr>
        <td><h3>First Name</h3></td>
        <td>{{fname}}</td>
      </tr>
      <tr>
        <td><h3>Last Name</h3></td>
        <td>{{lname}}</td>
      </tr>

      {{/details}}
    </tbody>
  </table>

  <h1>Order History</h1>
  <table>
    <tbody>

      {{#orders}}
      <tr>
        <td><h3>ID</h3></td>
        <td>{{id}}</td>
      </tr>
      <tr>
        <td><h3>Address</h3></td>
        <td>{{address}}</td>
      </tr>
      <tr>
        <td><h3>City</h3></td>
        <td>{{city}}</td>
      </tr>
      <tr>
        <td><h3>State</h3></td>
        <td>{{state}}</td>
      </tr>
      <tr>
        <td><h3>Zip</h3></td>
        <td>{{zip}}</td>
      </tr>
      <tr>
        <td><h3>Order Status</h3></td>
        <td>
          {{#equal order_status_id 1}} <p>Precessing</p> {{/equal}}
          {{#equal order_status_id 2}} Shipped {{/equal}}
          {{#equal order_status_id 3}} Refunded {{/equal}}
        </td>
      </tr>
      {{/orders}}

    </tbody>
  </table>
</div>
